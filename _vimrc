" Turn on syntax highlighting.
syntax on

" Turn on mouse support
set mouse=a

" Turn on truecolors
set termguicolors
let g:onedark_termcolors=256

" Automatically wrap text that extends beyond the screen length.
set wrap

" Speed up scrolling in Vim
set ttyfast

" Show line numbers
set number

" Encoding
set encoding=utf-8

" Highlight matching search patterns
set hlsearch
set incsearch

" Indentation
filetype indent on
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set smartindent

" Show matching parenthesis
set showmatch

" Visual autocomplete for command menu
set wildmenu

" Set color scheme
colorscheme onedark

" Set statusline
set laststatus=2
set statusline+=%F

" Use system clip board
set clipboard=unnamed

" Auto complete functions
set cf
